{
  "rewrites": [
    { "source": "/", "destination": "/reader/index.html" },
    { "source": "/chapter", "destination": "/reader/chapter.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
